<%- include ("../partials/header") %>

<!-- START -->
<div id="index-page">
  <h1><%= PLAYLIST.name %></h1>
  <div id="video-nav">
    <a class="video-button back-button" href="/playlists">Back</a>
    <a class="video-button shuffle-button" href="/playlists/<%= PLAYLIST.id %>/edit">Edit</a>
    <a class="video-button shuffle-button" href="<%= RANDOM_VID %>">Shuffle</a>
  </div>
  <div id="item-grid">
    <% PLAYLIST.videos.forEach(vid => { %>
    <div class="item"><a href="/playlists/<%= PLAYLIST.id %><%= vid.src %>"><%= vid.name %></a></div>
    <% }); %>
  </div>
</div>
<!-- END -->

<%- include ("../partials/footer") %>
