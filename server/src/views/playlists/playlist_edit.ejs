<%- include ("../partials/header") %>

<!-- START -->
<div id="index-page">
  <div id="video-nav">
    <a class="video-button back-button" href="/playlists/<%= PLAYLIST.id %>">Back</a>
    <h1><%= PLAYLIST.name %></h1>
    <a class="video-button shuffle-button" href="<%= RANDOM_VID %>">Shuffle</a>
  </div>
  <div id="item-grid">
    <form action="/api/playlists/<%= PLAYLIST.id %>/delete-videos" method="POST">
      <div class="form-edit">
        <% PLAYLIST.videos.forEach(vid => { %>
        <div class="item">
          <input type="checkbox" name="<%= vid.id %>" />
          <%= vid.name %>
        </div>
        <% }); %>
      </div>
      <div class="form-edit">
        <input class="form-submit" type="submit" value="Remove Selected Videos" />
        <a class="form-submit" href="/playlists/<%= PLAYLIST.id %>/delete">Delete Playlist</a>
      </div>
    </form>
  </div>
</div>
<!-- END -->

<%- include ("../partials/footer") %>
