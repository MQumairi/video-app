<%- include ("partials/header") %>
<!-- START -->
<!-- <h2><%= VID_NAME %></h2> -->
<div id="video-page">
  <div id="video-nav">
    <a class="video-button back-button" href="/directory/<%= DIR_NAME %>">Back</a>
    <h3><%= VID_NAME %></h3>
    <!-- FORM START -->
    <form action="/api/playlists/add-video" method="post">
      <label for="playlists">Add to</label>
      <select name="playlist" id="playlist">
        <% PLAYLISTS.forEach(playlist => { %>
        <option value="<%= playlist.name %>"><%= playlist.name %></option>
        <% }); %>
      </select>
      <input type="submit" value="Submit" />
    </form>
    <!-- FORM END -->
    <a class="video-button shuffle-button" href="<%= RANDOM_VID %>?mode=<%= MODE %>&playlist=<%= PLAYLIST_NAME %>">Shuffle</a>
  </div>
  <div id="video-container">
    <video width="1000" height="500" controls autoplay loop playsinline>
      <source src="/api/videos/data%2F<%= DIR_NAME %>%2F<%= VID_NAME %>" type="video/mp4" />
    </video>
  </div>
</div>
<!-- END -->
<%- include ("partials/footer") %>
